# Atlassian
ATLASSIAN_BASE_URL=https://your-domain.atlassian.net
ATLASSIAN_EMAIL=you@company.com
ATLASSIAN_API_TOKEN=xxxxxxx

# Confluence/Jira scopes
CONFLUENCE_SPACE_KEYS=ENG,OPS
JIRA_JQL=project = ABC AND text ~ "documentation"

# Embeddings / LLM (pick one stack)
OPENAI_API_KEY=sk-...
OPENAI_EMBED_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Optional: if using Azure OpenAI instead
# AZURE_OPENAI_ENDPOINT=...
# AZURE_OPENAI_API_KEY=...
# AZURE_OPENAI_DEPLOYMENT_EMBED=embeddings-small
# AZURE_OPENAI_DEPLOYMENT_CHAT=gpt-4o-mini

# Chunking
CHUNK_SIZE=1000
CHUNK_OVERLAP=150
TOP_K=5
